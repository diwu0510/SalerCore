@model Zodo.Saler.Website.Models.ChangePwViewModel

@{
    ViewData["Title"] = "修改密码";
}

<form asp-action="ChangePw">
    <h1 class="form-box-title">@ViewData["Title"]</h1>
    <hr />
    <div class="form-box-fixed-container">
        <div class="form-box">
            <div class="row">
                <div class="label">原始密码</div>
                <div class="control">
                    <input type="password" asp-for="OldPw" isvalid="yes" checkexpession="NotNull" />
                </div>
            </div>
            <div class="row">
                <div class="label">新密码</div>
                <div class="control">
                    <input type="password" asp-for="NewPw" isvalid="yes" checkexpession="Number" />
                </div>
            </div>
        </div>
    </div>

    <div class="form-box-fixed-foot row">
        <div class="col-6">
            <label>&nbsp;</label>
        </div>
        <div class="col-6 content-right">
            <input type="submit" value="提交" class="btn btn-blue" />
            <input id="btn-closeSelf" type="button" value="关闭" class="btn btn-red btn-close" />
        </div>
    </div>
</form>

@section scripts {
    <script src="~/lib/validator/validator.js"></script>
    <script>
        myUI.initForm({
            successFn: function () {
                parent.onPwChanged();
            }
        });
    </script>
}
