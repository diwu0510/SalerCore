@model HZC.Common.Services.DataItemEntity

@{
    ViewData["Title"] = "创建数据字典";
}

<form asp-action="Create">
    <h1 class="form-box-title">@ViewData["Title"]</h1>
    <hr />
    <div class="form-box-fixed-container">
        <div class="form-box">
            <div class="row">
                <div class="row">
                    <div class="col-6">
                        <div class="label"><span class="font-red">*</span> 字典键</div>
                        <div class="control">
                            <input type="text" asp-for="K" isvalid="yes" checkexpession="NotNull" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="label">字典项说明</div>
                        <div class="control">
                            <input type="text" asp-for="Describe" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="label"><span class="font-red">*</span> 字典值</div>
                    <div class="control">
                        <textarea asp-for="V" isvalid="yes" checkexpession="NotNull" rows="6" placeholder="不同项目使用 | 分割"></textarea>
                    </div>
                </div>
                @if (User.Identity.Name == "admin")
                {
                    <div class="row">
                        <div class="col-6">
                            <div class="label">所属类别</div>
                            <div class="control">
                                <input type="text" asp-for="Cate" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="label">&nbsp;</div>
                            <div class="control">
                                <label><input type="checkbox" asp-for="Editable" />是否可编辑</label>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div>
                        <input type="hidden" asp-for="Cate" />
                        <input type="hidden" asp-for="Editable" />
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="form-box-fixed-foot row">
        <div class="col-6">
            <label>&nbsp;</label>
        </div>
        <div class="col-6 content-right">
            <input type="submit" value="提交" class="btn btn-blue" />
            <input id="btn-closeSelf" type="button" value="关闭" class="btn btn-red btn-close" />
        </div>
    </div>
</form>

@section scripts {
    <script src="~/lib/validator/validator.js"></script>
    <script>
        myUI.initForm({ pageType: "pop" });
    </script>
}
