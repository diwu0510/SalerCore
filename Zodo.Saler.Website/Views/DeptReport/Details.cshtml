@model IEnumerable<Zodo.Saler.Services.SummaryViewModel>

@{
    ViewData["Title"] = "数据详情";
}
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>业务员</th>
            <th>成本合计</th>
            <th>业绩</th>
            <th>账面毛利</th>
            <th>毛利</th>
            <th>效益</th>
            <th>毛利率</th>
            <th>销售费用占比</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Name)</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZMML)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ML)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MLL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XSFYZYJ)
                </td>
            </tr>
        }
        }
        else
        {
            <tr class="empty">
                <td colspan="8">暂无数据</td>
            </tr>
        }
    </tbody>
</table>