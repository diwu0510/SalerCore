@model HZC.Common.Services.AppUser

@{
    ViewData["Title"] = "创建系统用户";
}

<form asp-action="Create">
    <h1 class="form-box-title">@ViewData["Title"]</h1>
    <hr />
    <div class="form-box-fixed-container">
        <div class="form-box">
            <div class="row">
                <div class="row">
                    <div class="label"><span class="font-red">*</span> 用户名</div>
                    <div class="control">
                        <input type="text" asp-for="Name" isvalid="yes" checkexpession="NotNull" />
                    </div>
                </div>
                <div class="row">
                    <div class="label"><span class="font-red">*</span> 角色</div>
                    <div class="control">
                        <select asp-for="Role" asp-items="ViewBag.Roles" isvalid="yes" checkexpession="NotNull">
                            <option value="">请选择</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-box-fixed-foot row">
        <div class="col-6">
            <label>&nbsp;</label>
        </div>
        <div class="col-6 content-right">
            <input type="submit" value="提交" class="btn btn-blue" />
            <input id="btn-closeSelf" type="button" value="关闭" class="btn btn-red btn-close" />
        </div>
    </div>
</form>

@section scripts {
    <script src="~/lib/validator/validator.js"></script>
    <script>
        myUI.initForm({ pageType: "pop" });
    </script>
}
