@{
    ViewData["Title"] = "MonthReport管理";
}

<div class="container-fluid full-height">
    <div id="container-header">
        <form id="form" onsubmit="return false;">
            <div class="toolbar row">
                <div class="col-6">
                    <a id="btn-create"
                       href="javascript:;"
                       data-action="/MonthReport/Create"
                       data-type="pop"
                       data-options='{"title": "创建", "width": 720, "height": 400, "before": null}'
                       class="btn btn-green btn-customer"><i class="fa fa-plus-square"></i> 添加</a>
                    <a id="btn-edit"
                       href="javascript:;"
                       data-action="/MonthReport/Edit"
                       data-type="pop"
                       data-grid="grid"
                       data-options='{"title": "修改", "width": 720, "height": 400, "before": null}'
                       class="btn btn-blue btn-customer"><i class="fa fa-pencil-square"></i> 修改</a>
                    <a id="btn-delete"
                       href="javascript:;"
                       data-action="/MonthReport/Delete"
                       data-type="ajax"
                       data-grid="grid"
                       data-options='{"msg": "确认操作？", "before": null}'
                       class="btn btn-red btn-customer"><i class="fa fa-trash-o"></i> 删除</a>
                    <a id="btn-refresh" href="javascript:;" class="btn btn-default" onclick="window.grid.reload();"><i class="fa fa-refresh"></i> 刷新</a>
                </div>
                <div class="col-6 content-right">
                    @Html.AntiForgeryToken()
                    <input name="Key" type="search" value="" placeholder="关键字" />
                    <input type="button" class="btn btn-blue" value="搜索" onclick="window.grid.reload()">
                    <a href="javascript:;" class="btn btn-default search-toggle-button"><i class="fa fa-filter"></i> 高级筛选</a>
                </div>
            </div>
            <div id="search-box" class="search-box">
                <div class="caret-h"></div>
                <div class="search-box-body form-box">
                    <div class="row">
                        <div class="col-4 form-box-cell">
                            <div class="label">销售ID</div>
                            <div class="control">
                                <select name="SalerId" asp-items="ViewBag.Salers">
                                    <option value="">销售ID</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-4 form-box-cell">
                            <div class="label">部门ID</div>
                            <div class="control">
                                <select name="DeptId" asp-items="ViewBag.Depts">
                                    <option value="">部门ID</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-4 form-box-cell">
                            <div class="label">年度</div>
                            <div class="control"><input type="text" name="Year" /></div>
                        </div>
                        <div class="col-4 form-box-cell">
                            <div class="label">月份</div>
                            <div class="control"><input type="text" name="Month" /></div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="list" class="grid-box"></div>
</div>

@section scripts
{
    <script src="~/lib/myui/myGridNoFixed.v2.js"></script>
    <script>
        var grid = $('#list').MyGrid({
            api: '/MonthReport/Get',
            columns: [
                { title: '编号', type: 'indexNum', width: 40 },
                { title: '销售ID', field: 'salerId', width: 120 },
                { title: '部门ID', field: 'deptId', width: 120 },
                { title: '年度', field: 'year', width: 120 },
                { title: '月份', field: 'month', width: 120 },
                { title: '飞机', field: 'fJ', width: 120 },
                { title: '火车', field: 'hC', width: 120 },
                { title: '巴士', field: 'bS', width: 120 },
                { title: '自驾车', field: 'zJC', width: 120 },
                { title: '的士费', field: 'dSF', width: 120 },
                { title: '业务招待费', field: 'yWZDF', width: 120 },
                { title: '住宿费', field: 'zSF', width: 120 },
                { title: '住宿节约奖励', field: 'zSJYJL', width: 120 },
                { title: '交通津贴', field: 'jTJT', width: 120 },
                { title: '餐费津贴', field: 'cFJT', width: 120 },
                { title: '通讯费', field: 'tXF', width: 120 },
                { title: '其他费用', field: 'qTFY', width: 120 },
                { title: '薪资', field: 'xZ', width: 120 },
                { title: '业绩', field: 'yJ', width: 120 },
                { title: '服务费', field: 'fWF', width: 120 },
                { title: '账面毛利', field: 'zMML', width: 120 },
                { title: '毛利', field: 'mL', width: 120 },
            ],
            keyColumn: 'id',
            height: function() {
                var h = $(window).height() - $('#container-header').height() - 40;
                return h;
            },
            pageSize: 20,
            dataConvertFn: function(source) { return source; },
            renderCompleteFn: null,
            filterFn: function() { return $('#form').serialize(); },
            ajaxErrorFn: null,
            ajaxBeforeSendFn: null,
            click: function(item) { },
            dblClick: function(item) { $('#btn-edit').trigger('click'); },
            multi: false,
            pager: true,
            auto: true
        });
    </script>
}

